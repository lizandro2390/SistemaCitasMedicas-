@model SistemaCitasMedicas.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="row g-0">
                <div class="col-md-6 d-none d-md-block bg-primary text-white p-5 rounded-start" style="background: linear-gradient(135deg, #007bff, #00c4cc);">
                    <h2 class="fw-bold mb-3"><i class="fas fa-key me-2"></i>Recuperar</h2>
                    <p class="lead">Restablece tu acceso en pocos pasos.</p>
                </div>
                <div class="col-md-6 p-5">
                    <h3 class="fw-bold mb-4 text-center">Recuperar Contraseña</h3>
                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Correo</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="Ingrese su correo" required>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-3">Enviar Enlace</button>
                        <div class="text-center">
                            <p><a asp-action="Login" asp-controller="Account" class="text-primary fw-bold">Volver al inicio de sesión</a></p>
                        </div>
                    </form>
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success text-center" role="alert">@TempData["Message"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">@TempData["Error"]</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
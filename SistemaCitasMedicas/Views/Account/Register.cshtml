@model SistemaCitasMedicas.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="row g-0">
                <div class="col-md-6 d-none d-md-block bg-primary text-white p-5 rounded-start" style="background: linear-gradient(135deg, #007bff, #00c4cc);">
                    <h2 class="fw-bold mb-3"><i class="fas fa-user-plus me-2"></i>Regístrate</h2>
                    <p class="lead">Únete a nuestro sistema y gestiona tus citas médicas fácilmente.</p>
                </div>
                <div class="col-md-6 p-5">
                    <h3 class="fw-bold mb-4 text-center">Crear Cuenta</h3>
                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Usuario</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" required>
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Correo</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="Ingrese su correo" required>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" required>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirme su contraseña" required>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-3">Registrarse</button>
                        <div class="text-center">
                            <p>¿Ya tienes una cuenta? <a asp-action="Login" asp-controller="Account" class="text-primary fw-bold">Inicia sesión</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model IEnumerable<SistemaCitasMedicas.Models.Cita>
@{
    ViewData["Title"] = "Mis Citas";
}

<div class="container">
    <h1 class="fw-bold text-primary mb-4">Mis Citas, @User.Identity.Name</h1>
    <p class="lead">Aquí puedes ver y gestionar tus citas programadas.</p>
    <a asp-action="ScheduleAppointment" class="btn btn-primary mb-3">Programar Nueva Cita</a>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-primary text-white">
            <tr>
                <th>Doctor</th>
                <th>Fecha y Hora</th>
                <th>Consultorio</th>
                <th>Estado</th>
                <th>Motivo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.Doctor.NombreCompleto</td>
                    <td>@cita.FechaHora.ToString("g")</td>
                    <td>@cita.Consultorio</td>
                    <td>@cita.Estado</td>
                    <td>@cita.Motivo</td>
                </tr>
            }
        </tbody>
    </table>
</div>
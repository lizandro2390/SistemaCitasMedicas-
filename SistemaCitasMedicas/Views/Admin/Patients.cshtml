@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Pacientes Registrados";
}

<div class="container">
    <h1 class="fw-bold text-primary mb-4">Pacientes Registrados</h1>
    <p class="lead">Lista de todos los pacientes registrados en el sistema.</p>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-primary text-white">
            <tr>
                <th>Usuario</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.UserName</td>
                    <td>@patient.Email</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a href="#" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model IEnumerable<SistemaCitasMedicas.Models.Doctor>
@{
    ViewData["Title"] = "Doctores Registrados";
}

<div class="container">
    <h1 class="fw-bold text-primary mb-4">Doctores Registrados</h1>
    <p class="lead">Lista de todos los doctores registrados en el sistema.</p>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-primary text-white">
            <tr>
                <th>Nombre Completo</th>
                <th>Especialidad</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.NombreCompleto</td>
                    <td>@doctor.Especialidad</td>
                    <td>@doctor.Telefono</td>
                    <td>@doctor.Correo</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a href="#" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
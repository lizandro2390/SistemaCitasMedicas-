@model IEnumerable<SistemaCitasMedicas.Models.Secretaria>
@{
    ViewData["Title"] = "Secretarias Registradas";
}

<div class="container">
    <h1 class="fw-bold text-primary mb-4">Secretarias Registradas</h1>
    <p class="lead">Lista de todas las secretarias registradas en el sistema.</p>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-primary text-white">
            <tr>
                <th>Nombre Completo</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var secretary in Model)
            {
                <tr>
                    <td>@secretary.NombreCompleto</td>
                    <td>@secretary.Telefono</td>
                    <td>@secretary.Correo</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a href="#" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>